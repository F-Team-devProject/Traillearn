# Configuration de la base de données
POSTGRES_PASSWORD=your-secure-postgres-password
DATABASE_URL=postgresql://postgres:your-secure-postgres-password@localhost:5432/coachprotalent

# Configuration Redis
REDIS_PASSWORD=your-secure-redis-password
REDIS_URL=redis://:your-secure-redis-password@localhost:6379

# Configuration Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Configuration JWT
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long

# Configuration de chiffrement
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-key

# Configuration OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# Configuration OAuth Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Configuration OAuth LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Configuration AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=coachprotalent-uploads
AWS_REGION=eu-west-3

# Configuration email (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@coachprotalent.com

# Configuration monitoring
GRAFANA_PASSWORD=your-grafana-admin-password

# Configuration de l'environnement
NODE_ENV=development
PORT=3000
API_PORT=3001

# Configuration frontend
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Configuration de sécurité
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuration des logs
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Configuration des tests
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/coachprotalent_test
TEST_REDIS_URL=redis://localhost:6379/1
